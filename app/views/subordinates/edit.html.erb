<% content_for :title do %>
    ユーザー編集(所属・役職)
<% end %>
<div class="panel panel-default">
<div class="panel-body">
<div class="row">
<div class="col-sm-12">


<%= form_with scope: :user, url: subordinate_path(@user), method: :patch  do |f| %>
<div class="col-md-6 offset-md-4">
  <div class="col-sm-6">
      <div class="form-group">
        <label class="control-label" for="">名前</label>：
        <label class="control-label" for=""><%=  @user[:name] %></label>
      </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label class="control-label" for="">所属</label>
      <%= f.collection_select :department_id, Department.all, :id, :name, options = {include_blank: true,  selected: @user[:department_id]}, class: 'form-control'  %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label class="control-label" for="">役職</label>
      <%= f.collection_select :role_id, Role.all, :id, :name, options = {include_blank: true,  selected: @user[:role_id]}, class: 'form-control'  %>
    </div>
  </div>
</div>
  <div class="text-center">
      <%= f.submit '登録', class: 'btn btn-primary' %>
  </div>
<% end %>