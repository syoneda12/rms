<div class="panel panel-default">
<div class="panel-body">
<div class="row">
<div class="col-sm-12">


<%= form_for(@user, url: path, method: method) do |f| %>
  <div class="col-sm-6">
    <div class="form-group">
      <label class="control-label" for="">email</label>：
      <label class="control-label" for=""><%= @user.email%></label>
    </div>
  </div>
  <div class="col-sm-6">
      <div class="form-group">
        <label class="control-label" for="">名前</label>
        <%= f.text_field :name, value: @user[:name], class: 'form-control' %>
      </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label class="control-label" for="">業界経験年数</label>
      <%= f.text_field :years_of_experience, value: @user[:years_of_experience], class: 'form-control' %>
      </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label class="control-label" for="">所属</label>：
      <label class="control-label" for=""><%= @user.department.name%></label>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label class="control-label" for="">役職</label>：
      <label class="control-label" for=""><%= @user.role.name%></label>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label class="control-label" for="">誕生日</label>
      <%= f.date_field :birthday, value: @user[:birthday], class: 'form-control' %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label class="control-label" for="">住所</label>
      <%= f.text_field :address, value: @user[:address], class: 'form-control' %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label class="control-label" for="">最寄り駅</label>
      <%= f.text_field :closest_station, value: @user[:closest_station], class: 'form-control' %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label class="control-label" for="">性別</label>
      <%= f.collection_select :gender, User.genders, :first, :first, options = {include_blank: true,  selected: @user[:gender]}, class: 'form-control'  %>
    </div>
  </div>  


  <% @skill_kind_all.each do |skillKind| %>
    <div class="col-sm-12">
      <!--<hr>-->
      <div style="position: relative;bottom: 40px;">
        <h3 style="position: absolute;left: 0;"><%= skillKind.name %></h3>
        <a  style="position: absolute;right: 0;" class="btn btn-default add_fields text-right" onclick = "addSkillArea(<%= skillKind.id%>)">スキルを追加</a>
      </div>
      <!--</br>-->
      <!-- </br>-->
      <div style="margin-top: 60px;">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>スキル</th>
              <th>レベル</th>
              <th>非公開</th>
              <th>削除</th>
            </tr>
          </thead>
          <tbody id="detail-association-insertion-point<%= skillKind.id%>">
          </tbody>
        </table>
      </div>
      <!--<hr>-->
    </div>
  <% end %>
  
  <div class="text-center">
      <%= f.submit '登録', class: 'btn btn-primary' %>
  </div>
<% end %>

</div><!-- /col-sm-12 -->
</div><!-- /row -->
</div><!-- /panel-body -->
</div><!-- /panel -->

  <div id="skill_kind_hash" data-json="<%= @skill_kind_hash.to_json %>" ></div>
  <div id="skill_all" data-json="<%= @skill_all.to_json %>" ></div>
  <div id="skill_kind_all" data-json="<%= @skill_kind_all.to_json %>" ></div>
  <div id="skill_level_all" data-json="<%= @skill_level_all.to_json %>" ></div>